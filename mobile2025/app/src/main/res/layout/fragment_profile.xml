<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark"
    android:padding="16dp">

    <!-- Encabezado con imagen y detalles del usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagen de perfil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/default_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/bottom_nav_dark_selected"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Pablo Fernandez"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="pablo_fernandez@gmail.com"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Opciones de perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/angle_right_thin"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Datos personales"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/manage_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/angle_right_thin"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Direcciones"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/view_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/angle_right_thin"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Mis pedidos"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/legal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/angle_right_thin"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Información legal"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/angle_right_thin"
            android:drawableTint="@android:color/white"
            android:drawablePadding="16dp"
            android:padding="12dp"
            android:text="Cerrar sesión"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/bottom_nav_dark_selected"
        android:text="Eliminar cuenta"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
